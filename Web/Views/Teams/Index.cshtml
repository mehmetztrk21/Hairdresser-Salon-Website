@model IEnumerable<Entity.Team>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Elemanlar</h4>

<p>
    <a asp-action="Create">Yeni</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {

    <div class="col-md-4">

        <img src="~/tema/images/@item.image" alt="" style="width: auto; height: auto; max-height: 100%; max-width: 100%;">
        <h6 style="text-align:center;" class="mt-2">@item.name</h6>
        <p style="text-align:center;">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Düzenle</a> |
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
        </p>
        <br />
        <br />
    </div>
       

    }
</div>
    
